# http://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
spelling_language = en
trim_trailing_whitespace = true

[*.json]
indent_size = 4
indent_style = space

[*.{yml,yaml}]
indent_size = 4
indent_style = space

[*.py]
indent_size = 4
indent_style = space

[*.sh]
indent_size = 4
indent_style = space

[justfile,Makefile]
tab_width = 4
indent_style = tab
